{
  "name": "breakpoint-changes-rx",
  "version": "0.0.0-development",
  "repository": {
    "type": "git",
    "url": "https://github.com/jenssimon/breakpoint-changes-rx"
  },
  "author": "Jens Simon <https://github.com/jenssimon>",
  "license": "MIT",
  "keywords": [
    "breakpoints",
    "breakpoints-change",
    "viewport",
    "responsive",
    "rxjs",
    "observable"
  ],
  "type": "module",
  "main": "dist/breakpoints.js",
  "types": "dist/breakpoints.d.ts",
  "files": [
    "dist/",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "lint": "eslint --ext .tsx,.ts,.mts,.cts,.jsx,.js,.mjs,.cjs ./",
    "build": "tsc",
    "prepublishOnly": "tsc",
    "test": "jest --coverage",
    "commit": "cz",
    "postinstall": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.0.0",
    "@commitlint/config-conventional": "^18.0.0",
    "@jenssimon/eslint-config-base": "^7.3.1",
    "@jenssimon/eslint-config-typescript": "^5.2.2",
    "@types/jest": "^29.5.6",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.52.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.0.2",
    "pinst": "^3.0.0",
    "rxjs": "^7.8.1",
    "semantic-release": "^22.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "rxjs": ">=6"
  },
  "eslintConfig": {
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "extends": [
      "@jenssimon/base",
      "@jenssimon/typescript"
    ],
    "rules": {
      "@typescript-eslint/naming-convention": "off",
      "import/no-unresolved": "off"
    }
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.[tj]sx?": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "modulePathIgnorePatterns": [
      "dist/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "extensionsToTreatAsEsm": [
      ".ts"
    ]
  },
  "packageManager": "yarn@4.0.0",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "**/*.{js,ts}": "eslint"
  },
  "release": {
    "branches": [
      "main"
    ]
  }
}
