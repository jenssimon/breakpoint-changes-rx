{
  "name": "breakpoint-changes-rx",
  "version": "0.0.0-development",
  "repository": {
    "type": "git",
    "url": "https://github.com/jenssimon/breakpoint-changes-rx"
  },
  "author": "Jens Simon <https://github.com/jenssimon>",
  "license": "MIT",
  "keywords": [
    "breakpoints",
    "breakpoints-change",
    "viewport",
    "responsive",
    "rxjs",
    "observable"
  ],
  "type": "module",
  "main": "dist/breakpoints.js",
  "types": "dist/breakpoints.d.ts",
  "files": [
    "dist/",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "lint": "eslint ./",
