{
  "name": "breakpoint-changes-rx",
  "version": "0.0.0-development",
  "repository": {
    "type": "git",
    "url": "https://github.com/jenssimon/breakpoint-changes-rx"
  },
  "author": "Jens Simon <https://github.com/jenssimon>",
  "license": "MIT",
  "keywords": [
    "breakpoints",
    "breakpoints-change",
    "viewport",
    "responsive",
    "rxjs",
    "observable"
  ],
  "type": "module",
  "main": "dist/breakpoints.js",
  "types": "dist/breakpoints.d.ts",
  "files": [
    "dist/breakpoints.js",
    "dist/breakpoints.d.ts",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "lint": "eslint --fix --ext .tsx,.ts,.jsx,.js ./ && tsc --noEmit",
    "build": "tsc",
    "prepublishOnly": "tsc",
    "test": "jest --coverage",
    "ci-test": "run-s \"ci-test:*\"",
    "ci-test:lint": "eslint --ext .tsx,.ts,.jsx,.js ./",
    "ci-test:tsc": "tsc --noEmit",
    "ci-test:test": "jest --coverage",
    "commit": "cz",
    "postinstall": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@commitlint/cli": "17.5.1",
    "@commitlint/config-conventional": "17.4.4",
    "@jenssimon/eslint-config-base": "6.6.13",
    "@jenssimon/eslint-config-typescript": "3.6.35",
    "@types/jest": "29.5.0",
    "commitizen": "4.3.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.38.0",
    "husky": "8.0.3",
    "jest": "29.5.0",
    "jest-environment-jsdom": "29.5.0",
    "lint-staged": "13.2.1",
    "npm-run-all": "4.1.5",
    "pinst": "3.0.0",
    "rxjs": "7.8.0",
    "semantic-release": "21.0.1",
    "ts-jest": "29.1.0",
    "ts-node": "10.9.1",
    "typescript": "5.0.4"
  },
  "peerDependencies": {
    "rxjs": ">=6"
  },
  "eslintConfig": {
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "extends": [
      "@jenssimon/base",
      "@jenssimon/typescript"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "modulePathIgnorePatterns": [
      "dist/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "packageManager": "yarn@3.5.0",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "**/*.{js,ts}": "eslint"
  },
  "release": {
    "branches": [
      "main"
    ]
  }
}
