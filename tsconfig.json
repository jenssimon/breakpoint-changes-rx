{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "outDir": "./dist/"
  },
  "include": [
    "src/**/*",
    "**/*.cjs"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
